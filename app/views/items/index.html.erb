<h1>Listing items</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Patrimonio</th>
    <th>Sala</th>
    <th>Descricao</th>
    <th>Problem</th>
    <th>Ticket</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.nome %></td>
    <td><%=h item.patrimonio %></td>
    <td><%=h item.sala %></td>
    <td><%=h item.descricao %></td>
    <td><%=h item.problem_id %></td>
    <td><%=h item.ticket_id %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', items, :confirm => 'Are you sure?', :method    => :delete %></td>
  </tr>
<% end %>
</table>

