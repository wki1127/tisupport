<h1>Listing tickets</h1>

<table>
  <tr>
    <th>Section</th>
    <th>Solicitante</th>
    <th>Ramal</th>
    <th>Prioridade</th>
  </tr>

<% @tickets.each do |ticket| %>
  <tr>
    <td><%=h ticket.section_id %></td>
    <td><%=h ticket.solicitante %></td>
    <td><%=h ticket.ramal %></td>
    <td><%=h ticket.prioridade %></td>
    <td><%= link_to 'Show', ticket %></td>
    <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
    <td><%= link_to 'Destroy', ticket, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ticket', new_ticket_path %>

